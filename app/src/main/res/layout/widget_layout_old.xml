<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/color_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colorTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_rect_top_tag"
                android:textSize="10sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rect_background"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/llNextNewsClickLayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_example"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLightTitle"
                        android:textSize="12sp"
                        android:textStyle="normal|bold"
                        android:layout_gravity="center" />
<!--
                    <Space
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content" />
-->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:text="@string/description_example"
                    android:textColor="@color/colorLightWidgetText"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/round_rect_date_source"
                android:gravity="center"
                android:padding="2dp">

                <TextView
                    android:text="Сегодня, в 13.39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDate"
                    android:textSize="10sp"
                    android:textColor="@color/colorLightWidgetText"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/space"
                android:textSize="10sp"
                android:layout_weight="3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@drawable/round_rect_date_source"
                android:padding="2dp"
                android:id="@+id/llUrlClickLayout">

                <TextView
                    android:text="@string/source_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSourceTitle"
                    android:textSize="10sp"
                    android:textColor="@color/colorLightWidgetText"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:text="@string/source_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSource"
                    android:textSize="10sp"
                    android:textColor="@color/colorLightWidgetText" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>