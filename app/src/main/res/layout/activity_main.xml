<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ringov.justnews.MainActivity"
    android:background="@drawable/background_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.ringov.justnews.MyFragment"
                android:id="@+id/widget_fragment"
                android:layout_weight="2"
                tools:layout="@layout/widget" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <Button
                    android:text="Добавить виджет на рабочий стол"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddWidget"
                    android:background="@drawable/btn_add_background"
                    android:textColor="@android:color/background_light"
                    android:layout_margin="16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorDivider"
                    android:layout_marginBottom="16dp"
                    ></View>

                <TextView
                    android:text="Что это?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTitleExplanation"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="@string/what_is_it"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWhatIs"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:text="Утренний кофе, обеденный перерыв, после работы и перед сном - всего четыре новости будут держать вас в курсе!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorDivider"
                    android:layout_marginBottom="16dp"
                    ></View>

                <Switch
                    android:text="Включить/выключить новостную палитру"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:id="@+id/switcher"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
