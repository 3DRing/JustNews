<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llNewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/llNextNewsClickLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/widget_light_background"
                    android:padding="6dp"
                    android:text="@string/title_example"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightTitle"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:layout_marginBottom="@dimen/element_division_size" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_division_size"
                    android:layout_weight="1"
                    android:background="@drawable/widget_light_background"
                    android:scrollbars="vertical"
                    android:text="@string/description_example"
                    android:textColor="@color/colorLightWidgetText"
                    android:textSize="11sp"
                    android:padding="8dp"
                    android:layout_marginBottom="@dimen/element_division_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/element_division_size">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/widget_light_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Сегодня, в 13.39"
                    android:textColor="@color/colorLightWidgetText"
                    android:textSize="10sp"
                    android:layout_marginRight="@dimen/element_division_size" />

                <LinearLayout
                    android:id="@+id/llUrlClickLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_light_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="@dimen/element_division_size">

                    <TextView
                        android:id="@+id/tvSourceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/source_text"
                        android:textColor="@color/colorLightWidgetText"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/source_example"
                        android:textColor="@color/colorLightWidgetText"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>